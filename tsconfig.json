{
  "compilerOptions": {
    "baseUrl": ".", 
      "paths": { 
        "@helpers/*": ["helpers/*"],
        "@components/*": ["components/*"],
      },
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
, "src/styles/styles.jsx"  ],
  "exclude": [
    "node_modules"
  ]
}
